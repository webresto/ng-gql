/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "declarationMap": false
  },
  "angularCompilerOptions": {
    "compilationMode": "partial"
  },
  "typedocOptions": {
    "entryPoints": [
      "./src/public-api.ts"
    ],
    "out": "docs",
    "plugin": [
      "typedoc-plugin-markdown"
    ],
    "excludePrivate": true,
    "includeVersion": true,
    "disableSources": true,
    "readme": "./README.md",
    "hideGenerator": true,
    "cleanOutputDir": true,
    "sort": "source-order",
    "hideBreadcrumbs": true,
    "namedAnchors": true,
    "publicPath": "./"
  }
}